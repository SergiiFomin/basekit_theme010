{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    
    <div class="global">

        <!--header-->
        <header>

            <div class="header">

                <div class="container">

                    <div class="row">

                        <article class="span12">

                            <div class="row">

                                <article class="span6">

                                    <h1 class="brand">                                        
                                        {{widget('companyheader', 'companyheader', {"defaultlogo": asset('/images/logo.png')})|raw}}
                                    </h1>
                                    {{widget('space', 'space', {'height': '30'})|raw}}

                                </article>

                                <article class="span6">

                                    {{widget('navigation', 'navigation', {'align': 'left'})|raw}}
                                    {{widget('space', 'space', {'height': '30'})|raw}}

                                </article>

                            </div>

                        </article>

                    </div>

                </div>

            </div>

        </header>

        <div class="showcase">

            <div class="container">

                <div class="row">

                    <article class="span12">

                        {{widget('responsiveslideshow', 'responsiveslideshow', {'duration':'3', 'transSpeed': '1000', 'transType': 'fade', 'showButtons': true, 'showBullets': true, 'allowPause': true, 'allowLoop': true, 'images':[{'imageHeight':'640', 'imageWidth':'1170', 'url':'http://placehold.it/640x1170', 'title':'test title', 'description': 'test desc'},{'imageHeight':'640', 'imageWidth':'1170', 'url':'http://placehold.it/640x1170', 'title':'test title', 'description': 'test desc'},{'imageHeight':'640', 'imageWidth':'1170', 'url':'http://placehold.it/640x1170', 'title':'test title', 'description': 'test desc'},{'imageHeight':'640', 'imageWidth':'1170', 'url':'http://placehold.it/640x1170', 'title':'test title', 'description': 'test desc'}]})|raw}}
                
                        {{widget('space', 'space', {'height': '50'})|raw}}

                    </article>

                </div>

            </div>

        </div>

        <div class="maintop">

            <div class="container">

                <div class="row">

                    <article class="span12">

                        <ul class="services">

                            <li>

                                {{widget('image', 'services-img1', { 'src': asset('images/icon1.png'), 'imageWidth': '75px'})|raw}}

                                {{widget('content', 'service-title1', {content: '<h3>dinner</h3>', lines: 'all'})|raw}}

                                {{widget('content', 'service-text1', {content: '<p>Praesent vestibulum molestie lacenean nonummy hendrerit mauris phasellus porta</p>', lines: 'all'})|raw}}

                                {{widget('button', 'services-but1', {italic: false, text:'button', 'align':'widget-align-center'})|raw}}

                            </li>

                            <li>

                                {{widget('image', 'services-img2', { 'src': asset('images/icon2.png'), 'imageWidth': '75px'})|raw}}

                                {{widget('content', 'service-title2', {content: '<h3>lunch</h3>', lines: 'all'})|raw}}

                                {{widget('content', 'service-text2', {content: '<p>Praesent vestibulum molestie lacenean nonummy hendrerit mauris phasellus porta</p>', lines: 'all'})|raw}}

                                {{widget('button', 'services-but2', {italic: false, text:'button', 'align':'widget-align-center'})|raw}}

                            </li>

                            <li>

                                {{widget('image', 'services-img3', { 'src': asset('images/icon3.png'), 'imageWidth': '75px'})|raw}}

                                {{widget('content', 'service-title3', {content: '<h3>sushi</h3>', lines: 'all'})|raw}}

                                {{widget('content', 'service-text3', {content: '<p>Praesent vestibulum molestie lacenean nonummy hendrerit mauris phasellus porta</p>', lines: 'all'})|raw}}

                                {{widget('button', 'services-but3', {italic: false, text:'button', 'align':'widget-align-center'})|raw}}

                            </li>

                            <li>

                                {{widget('image', 'services-img4', { 'src': asset('images/icon4.png'), 'imageWidth': '75px'})|raw}}

                                {{widget('content', 'service-title4', {content: '<h3>dessert</h3>', lines: 'all'})|raw}}

                                {{widget('content', 'service-text4', {content: '<p>Praesent vestibulum molestie lacenean nonummy hendrerit mauris phasellus porta</p>', lines: 'all'})|raw}}

                                {{widget('button', 'services-but4', {italic: false, text:'button', 'align':'widget-align-center'})|raw}}

                            </li>

                        </ul>
                
                        {{widget('space', 'space', {'height': '50'})|raw}}

                    </article>

                </div>

            </div>

        </div>

        <!--content-->

        <div class="container">

            <div class="row">

                <article class="span12">

                    <div class="row">

                        <article class="span8">

                            <div class="title">
                                {{widget('content', 'title1-path1', {content: '<h2>welcome</h2>', lines: 'all'})|raw}}
                                {{widget('content', 'title1-path2', {content: '<h3>welcome</h3>', lines: 'all'})|raw}}
                            </div>

                            {{widget('image', 'left', { 'src': asset('images/page1-img1.jpg'), 'imageWidth': '240px'})|raw}}

                            <div class="overflow">

                                {{widget('content', 'wel-content-title1', {content: '<h5>Experience the blend of art and taste of Japanese cuisine!</h5>', lines: 'all'})|raw}}

                                {{widget('content', 'wel-text1', {content: '<p>Lorem ipsum dolor sit amet consectetuer adipisc nibh euismod  tincidunt laoreet dolore magna aliquam erat volutpat ut wis enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis. Nisl ut aliquip ex ea commodo consequat.</p><p>Duis autem vel eum iriure dolor in hendrerit in vulputate velit esse mol estie consequat, vel illum dolore eu feugiat nulla facilisis at vero eros et accumsan et iusto odio dignissim qui blandit.</p>', lines: 'all'})|raw}}                                

                            </div>
                            
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                        <article class="span4">

                            {{widget('content', 'title2', {content: '<h2>welcome</h2>', lines: 'all'})|raw}}

                            {{widget('twitter', 'twitter', {'searchKey': 'basekit', 'searchType': 'temlatehelpcom', 'count': '2','refreshTime': '1800000','includeRts': '0'})|raw}}
                            
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                    </div>

                    {{zone('main')|raw}}

                </article>

            </div>

        </div>

    </div>

    <!--footer-->
    <footer>

        <div class="container">

            <div class="row">

                <section class="span12">

                    <div class="row">

                        <article class="span8">

                            {{widget('companyname', 'companyname', {"business": "sushi bar"})|raw}}
                            {{widget('content', 'copyright_copy', {content: '&nbsp;&copy;&nbsp;2013', lines: 'all'})|raw}}
                            {{widget('content', 'copyright_link', {content: '<a href="#">Privacy Policy</a>', lines: 'all'})|raw}}

                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                        <article class="span4">

                            {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                    </div>

                </section>

            </div>

        </div>

    </footer>
    
</div>

{% endblock %}